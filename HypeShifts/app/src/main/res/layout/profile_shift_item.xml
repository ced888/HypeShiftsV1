<?xml version="1.0" encoding="utf-8"?><!--
Description:
Displays the shift the belongs to a certain employee in their profile that displays the date,
time and type of shift in the item.

Author: Sergei Borja
Date Created: 2023-10-02
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentShiftView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <!--Container-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="@color/off_white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        tools:ignore="UselessParent">

        <!--Date Text-->
        <TextView
            android:id="@+id/dateTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!--Day of the Week Text-->
        <TextView
            android:id="@+id/dayOfTheWeekTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingBottom="10dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!--Time Text-->
        <TextView
            android:id="@+id/timeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingBottom="10dp"
            android:textSize="14sp" />

        <!--Shift Type Text-->
        <TextView
            android:id="@+id/shiftTypeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingBottom="5dp"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
